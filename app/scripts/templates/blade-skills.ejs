<div class="skills container">

<h2><%=title%></h2>


<% if (typeof(intro) != "undefined") { %>
<div class="row">
	<%=intro%>
</div>
<% } %>

<div class="row">
<% for (var i=0; i<skills.length; i++) { %>
	<div class="col-lg-4 col-md-4">
		<div class="panel panel-">
			<div class="panel-heading">
				<h3 class="panel-title"><%=skills[i].title%></h3>
			</div>
			<div class="panel-body">
				<div class="progress">
					<div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="<%=skills[i].progress%>" aria-valuemin="0" aria-valuemax="100" style="width: <%=skills[i].progress%>%">
    					<span class="sr-only"><%=skills[i].progress%>% Complete</span>
					</div>
				</div>
				<% if (typeof(skills[i].content) != "undefined") %>
				<p>
					skills[i].content
				</p>
			</div>
		</div>
	</div>
<% } %>
</div>

</div>

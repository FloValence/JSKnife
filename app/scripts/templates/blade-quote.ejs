<!--

blade-quoote template by Florian Valence

Params :

type: 'quote' * mandatory
background: like the css value
color: like the css value
authorColor: color for the cite block

content: the quote * mandatory
author: the author

 -->

<div class="quote" <% if (typeof(background) != "undefined" || typeof(color) != "undefined") { %> style="<% if (typeof(background) != "undefined") { %> background:<%= background %>;<% } %><% if (typeof(color) != "undefined") { %> color:<%= color %>;<% } %>"<% } %>>
	<blockquote class="large-12 columns">
		<p>“<%=content%>”</p>
		<% if (typeof(author) != "undefined") { %><cite<% if (typeof(authorColor) != "undefined") { %> style="<% if (typeof(authorColor) != "undefined") { %> authorColor:<%= color %>;<% } %>"<% } %>><%=author%></cite><% } %>
	</blockquote>
</div>
